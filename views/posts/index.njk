{% extends "layout.njk" %}

{% block content %}

<div class="posts">

    <div class="filter">
        <form action="/posts" method="GET">
            <input 
                type="text"
                name="filter"
                placeholder="Filter by title"
            >
            <button type="submit">Filter</button>
        </form>
    </div>


    <table id="posts_table" width="100%">
        <thead>
            <tr>
                <th>Post's Title</th>
                <th>Post's Content</th>
            </tr>
        </thead>

        <tbody>

            {% for post in posts %}
            <tr>
                <td>{{post.title}} </td>
                <td>{{post.body}}</td>
            </tr>
            {% endfor %}  
        </tbody>
    </table>
</div>


{% endblock content%}

